<div id="export-content" class="content-page">
  <div class="header-export">
    <div class="input-store">
      <span class="name-input">Chọn đại lý</span>
      <select name="store" id="store-select">
        {{#each stores}}
          <option value="{{MaDaiLy}}">{{TenDaiLy}}</option>
        {{/each}}
      </select>
    </div>
    <div class="date-export"> 
      <span>Ngày lập phiếu</span>
      <input type="date" id="date-export" readonly>
      <button id="submit-btn" >Xuất Phiếu</button>
    </div>
  </div>

  <div class="content-export">
    <div> 
      <span>Phiếu xuất hàng</span>
      <button id="add-item-btn">Thêm hàng hóa</button>
    </div>
    <div class="table-export">
  <table id="export-table" border="1">
    <thead>
      <tr>
        <th>STT</th>
        <th>Mặt hàng</th>
        <th>Đơn vị tính</th>
        <th>Số lượng</th>
        <th>Đơn giá</th>
        <th>Thành tiền</th>
        <th>Thao tác</th>
      </tr>
    </thead>
    <tbody>
      
    </tbody>
  </table>
</div>
  <div id="message-box" class="message-box hidden">
    Thêm mặt hàng
  </div>

  <div class="space"></div>

</div>
 <script src="js\export.js"></script>
