<link rel="stylesheet" href="css/settings.css" />

<div id="settings-content" class="content-page">
  <div class="setting-page-header">
    <h1>Thay đổi quy định</h1>
  </div>
  <div class="setting-page-content">
    <div class="left-content">
      <div class="item agency-type">
        <div class="item-header">
          <h1>Loại đại lý</h1>
        </div>
        <ul class="type">
          <li>
            <label>
              Loại 1:
              <input type="number" />
            </label>
          </li>
          <li>
            <label>
              Loại 2:
              <input type="number" />
            </label>
          </li>
        </ul>
        <div class="insert">
          <button>+</button>
        </div>
        <div class="edit">
          <button>Sửa</button>
        </div>
        <div class="save">
          <button>Lưu</button>
        </div>
      </div>

      <div class="item goods-count">
        <div class="item-header">
          <h1>Số lượng mặt hàng</h1>
        </div>
        <div class="maximum">
          <label>
            Tối đa:
            <input type="number" />
          </label>
        </div>
        <div class="edit">
          <button>Sửa</button>
        </div>
        <div class="save">
          <button>Lưu</button>
        </div>
      </div>
    </div>

    <div class="right-content">
      <div class="item maximum-agency">
        <div class="item-header">
          <h1>Đại lý trong quận</h1>
        </div>
        <div class="maximum">
          <label>
            Tối đa:
            <input type="number" />
          </label>
        </div>
        <div class="edit">
          <button>Sửa</button>
        </div>
        <div class="save">
          <button>Lưu</button>
        </div>
      </div>

      <div class="item unit-list">
        <div class="item-header">
          <h1>Đơn vị tính</h1>
        </div>
        <ul class="unit">
          <li>
            <p>1</p>
          </li>
          <li>
            <p>2</p>
          </li>
          <li>
            <p>3</p>
          </li>
        </ul>
        <div class="insert">
          <button>+</button>
        </div>
        <div class="save">
          <button>Lưu</button>
        </div>
      </div>
    </div>
  </div>
  <div class="space"></div>
</div>